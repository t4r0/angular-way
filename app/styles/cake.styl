@import 'colors'
cake-card .card
  height 600px
  max-height 650px
  background-color #fff
  box-shadow 1px 1px 1px 0px rgba(0, 0, 0, .15)
  text-align center
  padding 1.1em
  margin 1.1em
  border-radius 10px
  h1
  	color $main
  	text-transform uppercase
  	font-weight 900
  p
  	color $base-blue
  	font-size 14pt
  	text-align justify
  h3
  	color $emphasis-fuscia
  	font-size 18pt
  	font-weight 700
  .thumb
  	margin-top 3%
  	height 300px
  	width 100%
  	margin 0 auto
  	overflow hidden
  	position relative
  	img
  		position absolute
  		left 50%
  		top 50%
  		height 100%
  		width auto
  		transform translate(-50%,-50%)
  	.fancy
	    color lighten($main, 20%)
	    z-index: 9999;
	    font-size: 10rem;
	    left: 30%;
	    top: 60%;
	  	
footer
	background-color $emphasis-blue
	color #fff